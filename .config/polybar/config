[colors]
background-dark  = "#DD101010"
background-light = "#DD483018"
text-light       = "#FFE0E0E0"
text-dark        = "#FF808080"
degraded         = "#CCFFBF00"
urgent           = "#CC4C0000"


[bar/bottom]
monitor = ${env:MONITOR:}
width = 100%
height = 25
bottom = true
fixed-center = true
background = ${colors.background-dark}
foreground = ${colors.text-light}
padding-left = 0
padding-right = 1
module-margin = 1
font-0 = JetBrains Mono:pixelsize=10;2
font-1 = FontAwesome5Free:style=Regular:size=10;2
font-2 = FontAwesome5Free:style=Solid:size=10;2
font-3 = FontAwesome5Brands:style=Regular:size=10;2
modules-left = i3
modules-center = music
modules-right = cpu memory temperature filesystemroot filesystemhome wlan eth battery pulseaudio backlight keyboard date powermenu
tray-position = right
tray-padding = 4
cursor-click = pointer
cursor-scroll = ns-resize


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true
label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.background-dark}
label-focused = %name%
label-focused-background = ${colors.background-light}
label-focused-padding = 1
label-unfocused = %name%
label-unfocused-foreground = ${colors.text-dark}
label-unfocused-padding = 1
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}
label-urgent = %name%
label-urgent-background = ${colors.urgent}
label-urgent-foreground = ${colors.text-dark}
label-urgent-padding = 1
label-separator = " "


[module/filesystemroot]
type = internal/fs
interval = 60
mount-0 = /
label-mounted = " %percentage_used:02%%"
label-unmounted = ""


[module/filesystemhome]
type = internal/fs
interval = 60
mount-0 = /home
label-mounted = " %percentage_used:02%%"
label-unmounted = ""


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = "%percentage:02%%"


[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
label = "%percentage_used:02%%"


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3
format-connected-prefix = " "
label-connected = "%signal:02%%"
label-disconnected =


[module/eth]
type = internal/network
interface = enp14s0u1u2
interval = 3
format-connected-prefix = " "
label-connected = "%linkspeed%"
label-disconnected =


[module/date]
type = internal/date
interval = 5
date = ""
date-alt = " %a %d %b"
time = "%I:%M %p"
time-alt = "%I:%M:%S %p"
format-prefix = ""
label = "%date% %time%"


[module/keyboard]
type = internal/xkeyboard
blacklist-0 = caps lock
format = <label-layout>
label-layout = "%layout%"
format-prefix = " "


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 5
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage:02%%
label-muted = " 00%"
ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
click-right = "pavucontrol"


[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
label = " %percentage:02%%"


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 81
poll-interval = 10
label-charging = " %percentage:02%%"
label-discharging = " %percentage:02%%"
label-full = " %percentage:02%%"


[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input
base-temperature = 10
warn-temperature = 100
interval = 4
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = "%temperature-c%"
label-warn = "%temperature-c%"
label-warn-foreground = ${colors.degraded}
ramp-0 = ""
ramp-1 = ""
ramp-2 = ""


[module/music]
type = custom/script
format-prefix = "   "
interval = 3
format-foreground = ${colors.text-dark}
label-maxlen = 40
exec = ~/.config/polybar/scripts/music.sh


[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 2
label-open = " "
label-close = ""
label-separator-foreground = ${colors.text-dark}
menu-0-0 = ""
menu-0-0-exec = #powermenu.open.1
menu-0-1 = ""
menu-0-1-exec = #powermenu.open.2
menu-1-0 = ""
menu-1-0-exec = systemctl reboot
menu-1-1 = ""
menu-1-1-exec = #powermenu.open.0
menu-2-0 = ""
menu-2-0-exec = systemctl poweroff
menu-2-1 = ""
menu-2-1-exec = #powermenu.open.0


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5
margin-bottom = 5

[colors]
background-dark  = "#2A0D45"
background-light = "#551A8B"
accent           = "#9975B9"
text-light       = "#E0E0E0"
text-dark        = "#808080"
degraded         = "#FFBF00"
urgent           = "#4C0000"


[bar/bottom]
monitor = ${env:MONITOR:}
width = 100%
height = 28
bottom = true
fixed-center = true
line-size = 2
background = ${colors.background-dark}
foreground = ${colors.text-light}
padding-left = 0
padding-right = 2
module-margin = 2
font-0 = Roboto:pixelsize=11;2
font-1 = FontAwesome5Free:style=Regular:size=11;2
font-2 = FontAwesome5Free:style=Solid:size=11;2
font-3 = FontAwesome5Brands:style=Regular:size=11;2
modules-left = i3
modules-center = music
modules-right = cpu memory temperature filesystemroot filesystemhome wlan eth battery pulseaudio backlight date powermenu
tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.background-dark}
; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-light}
label-focused-underline = ${colors.accent}
label-focused-padding = 2
; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-foreground = ${colors.text-dark}
label-unfocused-underline = ${colors.background-light}
label-unfocused-padding = 2
; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.accent}
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.urgent}
label-urgent-foreground = ${colors.text-dark}
label-urgent-underline = ${colors.background-light}
label-urgent-padding = 2
; separator
label-separator = "  "


[module/filesystemroot]
type = internal/fs
interval = 60
mount-0 = /
label-mounted = " %percentage_used%%"
label-unmounted = ""
format-mounted-underline = ${colors.background-light}


[module/filesystemhome]
type = internal/fs
interval = 60
mount-0 = /home
label-mounted = " %percentage_used%%"
label-unmounted = ""
format-mounted-underline = ${colors.background-light}


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-underline = ${colors.background-light}
label = %percentage:2%%


[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-underline = ${colors.background-light}
label = %percentage_used%%


[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3
format-connected-prefix = " "
format-connected-underline = ${colors.background-light}
label-connected = %essid%
label-disconnected =


[module/eth]
type = internal/network
interface = enp14s0u1u2
interval = 3
format-connected-prefix = " "
format-connected-underline = ${colors.background-light}
label-connected = %local_ip%
label-disconnected =


[module/date]
type = internal/date
interval = 5
date =
date-alt = "%a %d %b"
time = %I:%M %p
time-alt = %I:%M:%S %p
format-prefix = " "
format-underline = ${colors.background-light}
label = %date% %time%


[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 5
format-volume = <ramp-volume> <label-volume>
format-volume-underline = ${colors.background-light}
label-muted = ""
ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
click-right = "pavucontrol >/dev/null 2>&1 &" ; Doesn't work yet


[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true ; Doesn't work!
format-underline = ${colors.background-light}
label = " %percentage%%"


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 81
poll-interval = 10
format-charging-underline = ${colors.background-light}
format-discharging-underline = ${colors.background-light}
format-full-underline = ${colors.background-light}
label-charging = " %percentage%%"
label-discharging = " %percentage%%"
label-full = " %percentage%%"


[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon6/temp1_input
base-temperature = 10
warn-temperature = 100
interval = 4
format-underline = ${colors.background-light}
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.degraded}
ramp-0 = ""
ramp-1 = ""
ramp-2 = ""


[module/music]
type = custom/script
format-prefix = "   "
interval = 3
format-foreground = ${colors.accent}
exec = ~/.config/polybar/scripts/music.sh


[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 2
format-underline = ${colors.background-light}
label-open = " "
label-close = ""
label-separator = "|"
label-separator-foreground = ${colors.text-dark}
menu-0-0 = ""
menu-0-0-exec = menu-open-1
menu-0-1 = ""
menu-0-1-exec = menu-open-2
menu-1-0 = ""
menu-1-0-exec = systemctl reboot
menu-1-1 = ""
menu-1-1-exec = menu-open-0
menu-2-0 = ""
menu-2-0-exec = systemctl poweroff
menu-2-1 = ""
menu-2-1-exec = menu-open-0


[settings]
screenchange-reload = true


[global/wm]
margin-top = 5

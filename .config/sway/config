client.focused          $border_color             $bg_color_dark    $text_color_light $indicator_color  $border_color
client.unfocused        $border_color_transparent $bg_color_unfocus $text_color_dark  $bg_color_unfocus $border_color_transparent
client.focused_inactive $border_color_transparent $bg_color_unfocus $text_color_dark  $bg_color_unfocus $border_color_transparent
